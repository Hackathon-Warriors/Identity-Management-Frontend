<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thales.idverification">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name="com.thales.idverification.WaterBudgetApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GeoTagging">
        <activity
            android:name="com.thales.idverification.modules.savedlocations.ImageDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.modules.savedlocations.SavedLocationsActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.modules.uploadimage.UploadImageActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.modules.ImagePreviewActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.modules.dashboard.ui.DashboardDrawerActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.modules.selectlanguage.SelectLanguageActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.modules.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thales.idverification.modules.login.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.thales.idverification.MainActivity"
            android:exported="true" />
    </application>

</manifest>