<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.uploadimage.UploadImageActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/librebaskerville_bold"
        android:text="Upload Image"
        android:textColor="@color/primary_text_color"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/no_image_available"
        android:layout_marginTop="18dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <include
        android:id="@+id/latitude"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@+id/img"
        />

    <include
        android:id="@+id/longitude"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/latitude"
        />

    <include
        android:id="@+id/address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/longitude"
        />

    <include
        android:id="@+id/activity_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/address"
        />

    <include
        android:id="@+id/activity_date"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/activity_name"
        />

    <include
        android:id="@+id/entity_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/activity_date"
        />

    <include
        android:id="@+id/entity_type"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/entity_name"
        />

    <include
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        layout="@layout/upload_image_field"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/entity_type"
        />

    <TextView
        android:id="@+id/item_img"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/librebaskerville_regular"
        android:textSize="15sp"
        android:layout_marginBottom="36dp"
        android:background="@color/accent_color"
        android:textColor="@color/text_icons_color"
        android:drawablePadding="5dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_image_30"
        app:drawableEndCompat="@drawable/ic_baseline_upload_30" />

    <Button
        android:id="@+id/create_item"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:elevation="10dp"
        android:fontFamily="@font/librebaskerville_regular"
        android:gravity="center"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/text_icons_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/item_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
