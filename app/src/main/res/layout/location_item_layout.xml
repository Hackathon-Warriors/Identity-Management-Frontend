<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:background="@drawable/location_item_gradient_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/librebaskerville_bold"
        android:textSize="15sp"
        android:textColor="@color/text_icons_color"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Plantation drive" />

    <TextView
        android:id="@+id/address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/librebaskerville_italic"
        android:textSize="12sp"
        android:textColor="@color/text_icons_color"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@id/activity_name"
        tools:text="Tarawade Vasti, Mohammadwadi, Pune" />

    <TextView
        android:id="@+id/activity_date"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/librebaskerville_regular"
        android:textSize="10sp"
        android:textColor="@color/text_icons_color"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4.5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@id/address"
        tools:text="2023:07:02" />


</androidx.constraintlayout.widget.ConstraintLayout>